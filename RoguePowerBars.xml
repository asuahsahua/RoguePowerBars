<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
  
  
  <Frame name="RoguePowerBarTemplate" virtual="true">
    <Size>
      <AbsDimension x="254" y="24"/>
    </Size>

    <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" tile="true">
      <Color r="0" g="0" b="0" a="0.8"/>
    </Backdrop>
    
    <Layers>
      <Layer level="ARTWORK">
        <Texture name="$parent_Icon" file="Interface\Icons\Ability_Rogue_MasterOfSubtlety">
          <Size>
            <AbsDimension x="21" y="20"/>
          </Size>
          <Anchors>
            <Anchor point="TOPLEFT">
              <Offset>
                <AbsDimension x="2" y="-2"/>
              </Offset>
            </Anchor>
          </Anchors>
        </Texture>
      </Layer>
    </Layers>

    <Frames>
      <StatusBar name="$parent_StatusBar" drawLayer="ARTWORK">
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
            <Offset>
              <AbsDimension x="22" y="-2"/>
            </Offset>
          </Anchor>
          <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT">
            <Offset>
              <AbsDimension x="-2" y="2"/>
            </Offset>
          </Anchor>

        </Anchors>

        <BarTexture file="Interface\AddOns\RoguePowerBars\BatTextureSmooth.tga"/>   <!-- file="Interface\TargetingFrame\UI-StatusBar" -->

        <BarColor r="0" g="0.5" b="1.0"/>

        <Scripts>
          <OnLoad>
          </OnLoad>
        </Scripts>

      </StatusBar>

      <Frame>
        <Layers>
          <Layer level="OVERLAY">
            <FontString name="$parent_DescribeText" inherits="GameFontNormal" justifyH="LEFT">
              <Color r="1" g="1" b="1" a="1"/>
              <Anchors>
                <Anchor point="LEFT">
                  <Offset>
                    <AbsDimension x="2" y="0"/>
                  </Offset>
                </Anchor>
                <Anchor point="RIGHT">
                  <Offset>
                    <AbsDimension x="-35" y="0"/>
                  </Offset>
                </Anchor>
              </Anchors>
            </FontString>
            <FontString name="$parent_DurationText" inherits="GameFontNormal" justifyH="RIGHT">
              <Color r="1" g="1" b="1" a="1" />
              <Anchors>
                <Anchor point="RIGHT">
                  <Offset>
                    <AbsDimension x="-2" y="0"/>
                  </Offset>
                </Anchor>
              </Anchors>
            </FontString>
          </Layer>
        </Layers>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent_StatusBar" relativePoint="TOPLEFT" />
          <Anchor point="BOTTOMRIGHT" relativeTo="$parent_StatusBar" relativePoint="BOTTOMRIGHT" />
        </Anchors>
      </Frame>
      <Frame name="$parent_BarBackGround">
        <Backdrop bgFile="Interface\AddOns\RoguePowerBars\BatTextureSmooth.tga" tiel="true"/>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent_StatusBar" relativePoint="TOPLEFT" />
          <Anchor point="BOTTOMRIGHT" relativeTo="$parent_StatusBar" relativePoint="BOTTOMRIGHT" />
        </Anchors>
      </Frame>
    </Frames>

    <Scripts>
      <OnLoad>
      </OnLoad>
    </Scripts>
  </Frame>


  <Frame name="RoguePowerBarSetTemplate" virtual="true" clampedToScreen="true" enableMouse="false" movable="true">

    <Size>
      <AbsDimension x="250" y="1"/>
    </Size>
        
        
    <Frames>
      <Frame>
        <Layers>
          <Layer level="OVERLAY">
            <FontString name="$parent_BarsetText" inherits="GameFontNormal" justifyH="LEFT">
              <Color r="1" g="1" b="1" a="1"/>
              <Anchors>
                <Anchor point="LEFT">
                  <Offset>
                    <AbsDimension x="2" y="0"/>
                  </Offset>
                </Anchor>
                <Anchor point="RIGHT">
                  <Offset>
                    <AbsDimension x="-35" y="0"/>
                  </Offset>
                </Anchor>
              </Anchors>
            </FontString>
          </Layer>
        </Layers>
      </Frame>
    </Frames>
    
    <Anchors>
    </Anchors>

    <Scripts>
      
      <OnLoad>
      </OnLoad>

      <OnUpdate>
        OnUIUpdate(arg1, self);
      </OnUpdate>

      <OnEvent>
      </OnEvent>

       <OnMouseDown>
         if ( arg1 == "LeftButton" and not BarsAreLocked()) then
           self:StartMoving();
         end
       </OnMouseDown>

       <OnMouseUp>
         if ( arg1 == "LeftButton" ) then
           self:StopMovingOrSizing();
           OnBarsetMove(self);
         end
       </OnMouseUp>

    </Scripts>
  </Frame>

</Ui>
