<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">


	<CheckButton name="CheckBoxTemplate" inherits="OptionsCheckButtonTemplate" virtual="true">
		<HitRectInsets>
			<AbsInset left="0" right="0" top="0" bottom="0"/>
		</HitRectInsets>
		<Scripts>
			<OnClick>
				if ( this:GetChecked() ) then
					PlaySound("igMainMenuOptionCheckBoxOff");
				else
					PlaySound("igMainMenuOptionCheckBoxOn");
				end
			</OnClick>
		</Scripts>
	</CheckButton>


  <!-- DROPDOWN TEMPLATE -->
  <Frame name="DropdownTemplate" inherits="UIDropDownMenuTemplate" virtual="true">
    <Size>
      <AbsDimension x="128" y="16"/>
    </Size>
    <Layers>
      <Layer level="BACKGROUND">
        <FontString name="$parent_DropDownLabel" inherits="GameFontNormalSmall">
          <Anchors>
            <Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT">
              <Offset>
                <AbsDimension x="21" y="0"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>


  <Frame name="SliderTemplate" virtual="true">
		<Size>
			<AbsDimension x="160" y="18"/>
		</Size>
		<Frames>
			<Slider name="$parent_Slider" inherits="OptionsSliderTemplate">
				<Anchors>
					<Anchor point="LEFT">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Slider>
			<Frame>
				<Layers>
					<Layer level="BACKGROUND">
						<FontString name="$parent_SliderText" inherits="GameFontHighlightSmall">
							<Anchors>
							<Anchor point="LEFT" relativeTo="$parent_Slider" relativePoint="RIGHT">
								<Offset>
									<AbsDimension x="7" y="0"/>
								</Offset>
							</Anchor>
						</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
	</Frame>


	<Frame virtual="true" name="NormalCheckBoxTemplate">
		<Size>
			<AbsDimension x="200" y="24"/>
		</Size>
		<Frames>
			<CheckButton name="$parent_CheckBox" inherits="CheckBoxTemplate">
        <Size>
          <AbsDimension x="24" y="24"/>
        </Size>
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativeTo="$parent" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="0" y="16"/>
						</Offset>
					</Anchor>
				</Anchors>
			</CheckButton>

			<Frame>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parent_DescribeText" inherits="GameFontNormalSmall">
							<Anchors>
								<Anchor point="LEFT">
									<Offset>
										<AbsDimension x="32" y="1"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_CheckBox" relativePoint="TOPLEFT" />
					<Anchor point="BOTTOMRIGHT" relativeTo="$parent_CheckBox" relativePoint="BOTTOMRIGHT" />
				</Anchors>
			</Frame>

		</Frames>

	</Frame>



	<Frame name="RoguePowerBarConfigFrame" clampedToScreen="true" frameStrata="HIGH" toplevel="true" enableMouse="true" movable="true" parent="UIParent" hidden="true">
		<Size>
			<AbsDimension x="520" y="490"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		
		<Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\DialogFrame\UI-DialogBox-Border"> <!-- edgeFile="Interface\Tooltips\UI-Tooltip-Border" bgFile="Interface\Tooltips\UI-Tooltip-Background" tile="true">-->
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
		  </Backdrop>

		<frames>

			<Frame>
				<Size>
					<AbsDimension x="100" y="20"/>
				</Size>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parent_Title" inherits="GameFontHighlightLarge">
							<Anchors>
								<Anchor point="TOPLEFT">
									<Offset>
										<AbsDimension x="10" y="-10"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>

				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT"/>
				</Anchors>
			</Frame>


			<Frame>
				<Size>
					<AbsDimension x="200" y="20"/>
				</Size>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parent_OptionHeader" Text="Enable or Disable the duration bars:" inherits="GameFontNormal">
							<Anchors>
								<Anchor point="TOPLEFT">
									<Offset>
										<AbsDimension x="20" y="-35"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>

				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT"/>
				</Anchors>
			</Frame>

			<Frame>
				<Size>
					<AbsDimension x="200" y="20"/>
				</Size>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parent_SettingsHeader" Text="Options:" inherits="GameFontNormal">
							<Anchors>
								<Anchor point="TOPLEFT">
									<Offset>
										<AbsDimension x="20" y="-260"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>

				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT"/>
				</Anchors>
			</Frame>

			<Frame name="$parent_LockOption" inherits="NormalCheckBoxTemplate">
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativeTo="$parent_SettingsHeader" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="0" y="-46"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Frame>

			<Frame name="$parent_InvertOption" inherits="NormalCheckBoxTemplate">
				<Anchors>
          <Anchor point="BOTTOMLEFT" relativeTo="$parent_SettingsHeader" relativePoint="BOTTOMLEFT">
            <Offset>
              <AbsDimension x="0" y="-68"/>
            </Offset>
          </Anchor>
        </Anchors>
			</Frame>


			<Frame name="$parent_TextOption" inherits="NormalCheckBoxTemplate">
				<Anchors>
          <Anchor point="BOTTOMLEFT" relativeTo="$parent_SettingsHeader" relativePoint="BOTTOMLEFT">
            <Offset>
              <AbsDimension x="0" y="-90"/>
            </Offset>
          </Anchor>
        </Anchors>
			</Frame>


			<Frame name="$parent_FlashOption" inherits="NormalCheckBoxTemplate">
				<Anchors>
          <Anchor point="BOTTOMLEFT" relativeTo="$parent_SettingsHeader" relativePoint="BOTTOMLEFT">
            <Offset>
              <AbsDimension x="0" y="-112"/>
            </Offset>
          </Anchor>
        </Anchors>
			</Frame>

			<Frame name="$parent_DurationOption" inherits="NormalCheckBoxTemplate">
				<Anchors>
          <Anchor point="BOTTOMLEFT" relativeTo="$parent_SettingsHeader" relativePoint="BOTTOMLEFT">
            <Offset>
              <AbsDimension x="0" y="-134"/>
            </Offset>
          </Anchor>
        </Anchors>
			</Frame>

      
      <Frame name="RoguePowerBarExample" inherits="RoguePowerBarTemplate">
        <Anchors>
          <Anchor point="BOTTOMLEFT" relativeTo="$parent_SettingsHeader" relativePoint="BOTTOMLEFT">
            <Offset>
              <AbsDimension x="0" y="-174"/>
            </Offset>
          </Anchor>
        </Anchors>
      </Frame>
      
      
      <Frame name="$parent_SortOrder" inherits="DropdownTemplate">
        <Anchors>
          <Anchor point="BOTTOMLEFT" relativeTo="$parent_SettingsHeader" relativePoint="BOTTOMLEFT">
            <Offset>
              <AbsDimension x="292" y="-46"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnLoad>
            UIDropDownMenu_Initialize(this, function() SortOrderDropDown_Initialize() end);
          </OnLoad>
          <OnShow>
            SortOrderDropDown_OnShow();
          </OnShow>
        </Scripts>
      </Frame>


      <Frame name="$parent_ScaleSlider" inherits="SliderTemplate">
				<Anchors>
          <Anchor point="BOTTOMLEFT" relativeTo="$parent_SettingsHeader" relativePoint="BOTTOMLEFT">
            <Offset>
							<AbsDimension x="310" y="-76"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Frame>

      <Frame name="$parent_AlphaSlider" inherits="SliderTemplate">
        <Anchors>
          <Anchor point="BOTTOMLEFT" relativeTo="$parent_SettingsHeader" relativePoint="BOTTOMLEFT">
            <Offset>
              <AbsDimension x="310" y="-120"/>
            </Offset>
          </Anchor>
        </Anchors>
      </Frame>


      <Frame name="$parent_BarTexture" inherits="DropdownTemplate">
        <Anchors>
          <Anchor point="BOTTOMLEFT" relativeTo="$parent_SettingsHeader" relativePoint="BOTTOMLEFT">
            <Offset>
              <AbsDimension x="292" y="-178"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnLoad>
	          UIDropDownMenu_Initialize(this, function() BarStyleDropDown_Initialize() end);
          </OnLoad>
          <OnShow>
	        BarStyleDropDown_OnShow();
          </OnShow>
        </Scripts>
      </Frame>




      <Button name="$parentButtonClose" inherits="OptionsButtonTemplate" text="Close">
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="-12" y="16"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick> RoguePowerBarConfigFrameCloseButton_OnClick(); </OnClick>
				</Scripts>
			</Button>

		</frames>

		<scripts>

			<OnLoad>
				 RoguePowerBarConfigFrame_OnLoad();
			</OnLoad>

			<OnShow>
				 RoguePowerBarConfigFrame_OnShow();
			</OnShow>

			<OnMouseDown>
 				if ( arg1 == "LeftButton") then
 					this:StartMoving();
 				end
 			</OnMouseDown>

 			<OnMouseUp>
 				if ( arg1 == "LeftButton" ) then
 					this:StopMovingOrSizing();
 				end
 			</OnMouseUp>

		</scripts>

	</Frame>

</Ui>
